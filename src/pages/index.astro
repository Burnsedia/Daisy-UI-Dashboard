<!-- DaisyUI Dashboard Index Page -->
---
import DefaultLayout from '../layouts/DefaultLayout.astro'
import DashboardWidget from '../components/DashboardWidget.astro';
---

<DefaultLayout title="Dashboard">
  <section class="p-6">
    <h1 class="text-3xl font-bold">Welcome Astronaut ğŸ§‘â€ğŸš€</h1>
    <p class="text-lg mt-2">Build fast dashboards, faster (and accessible).</p>
  </section>

  <section class="mt-8">
    <div class="p-6 bg-base-100 shadow-lg rounded-lg">
      <div class="flex justify-between items-center">
        <h2 class="text-2xl font-semibold">Widgets</h2>
        <p id="current-time" class="text-sm text-gray-500"></p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-4">
        <DashboardWidget />
        <DashboardWidget number="+33" title="Products sold" />
        <DashboardWidget number="-120" title="Images deleted" type="error" />
        
        <!-- Placeholder widgets -->
        <div class="h-32 border-4 border-dashed border-gray-300 rounded-lg"></div>
        <div class="h-32 border-4 border-dashed border-gray-300 rounded-lg"></div>
        <div class="h-32 border-4 border-dashed border-gray-300 rounded-lg"></div>
        <div class="h-32 border-4 border-dashed border-gray-300 rounded-lg"></div>
        <div class="h-32 border-4 border-dashed border-gray-300 rounded-lg"></div>
        <div class="h-32 border-4 border-dashed border-gray-300 rounded-lg"></div>
        <div class="h-32 border-4 border-dashed border-gray-300 rounded-lg"></div>
        <div class="h-32 border-4 border-dashed border-gray-300 rounded-lg"></div>
        <div class="h-32 border-4 border-dashed border-gray-300 rounded-lg"></div>
      </div>
    </div>
  </section>
</DefaultLayout>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const date = new Date();
    document.querySelector("#current-time").innerHTML = `<em>${date.toDateString()}</em>`;
  });
</script>
