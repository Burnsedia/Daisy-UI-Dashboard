---
import LoginLayout from '../layouts/LoginLayout.astro'
import LoginForm from '../components/LoginForm.astro'
import { Notification } from 'accessible-astro-components'
import { Icon } from 'astro-icon'
---


<!-- DaisyUI Login Page -->
<LoginLayout title="Login">
  <section class="bg-base-200 min-h-screen flex items-center justify-center">
    <div class="flex flex-col md:flex-row shadow-lg rounded-lg overflow-hidden w-full max-w-4xl">
      <!-- Brand Section -->
      <div class="bg-neutral p-10 flex flex-col items-center justify-center text-center w-full md:w-1/3">
        <div class="bg-neutral-focus p-4 rounded-lg">
          <img class="w-20 h-20" src="/astro-logo.svg" alt="Astro Logo">
        </div>
        <div class="mt-4">
          <span class="block text-xl font-bold">Astro Dashboard</span>
          <span class="text-sm">An DaisyUI Astro Theme</span>
        </div>
      </div>
      
      <!-- Login Form Section -->
      <div class="p-10 w-full md:w-2/3">
        <div class="alert alert-info mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M12 2a10 10 0 1 1-10 10A10 10 0 0 1 12 2z" />
          </svg>
          <span>Log in using <strong>admin@astro.demo</strong> and <strong>Astronaut570</strong>.</span>
        </div>
        
        <div>
          <h1 class="text-2xl font-bold mb-4">Login</h1>
          <LoginForm />
        </div>
      </div>
    </div>
  </section>
</LoginLayout>

